{
  "scripts": {
    "dev": "concurrently \"bun run dev:chase:frontend\" \"bun run dev:chase:backend\"",
    "dev:chase:frontend": "cd chase/frontend && bun run dev",
    "dev:chase:backend": "cd chase/backend && bun run dev",
    "install-all": "bun i && concurrently \"bun run install-all:chase:backend\" \"bun run install-all:chase:frontend\" \"bun run install-all:auth\" \"bun run install-all:munify-util\"",
    "install-all:chase:backend": "cd ./chase/backend && bun i",
    "install-all:chase:frontend": "cd ./chase/frontend && bun i",
    "install-all:auth": "cd ./auth && bun i",
    "install-all:munify-util": "cd ./munify-util && bun i",
    "update-all": "concurrently \"bun run update-all:chase:backend\" \"bun run update-all:chase:frontend\" \"bun run update-all:auth\" \"bun run update-all:munify-util\"",
    "update-all:chase:backend": "cd ./chase/backend && bun update",
    "update-all:chase:frontend": "cd ./chase/frontend && bun update",
    "update-all:auth": "cd ./auth && bun update",
    "update-all:munify-util": "cd ./munify-util && bun update",
    "format": "biome format . --write",
    "lint": "biome check . --apply",
    "test": "echo TODO"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.3",
    "bun-types": "latest",
    "concurrently": "^8.2.2"
  }
}
