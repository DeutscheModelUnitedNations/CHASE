{
  "scripts": {
    "dev": "npm-run-all -p dev:**",
    "dev:chase:backend": "cd ./chase/backend && npm run dev",
    "dev:chase:frontend": "cd ./chase/frontend && npm run dev",
    "dev:auth": "cd ./auth && npm run dev",
    "install-all": "npm i && npm-run-all install-all:**",
    "install-all:chase:backend": "cd ./chase/backend && npm i && npx npm-check-updates",
    "install-all:chase:frontend": "cd ./chase/frontend && npm i && npx npm-check-updates",
    "install-all:auth": "cd ./auth && npm i && npx npm-check-updates",
    "upgrade-all": "npm-run-all -p upgrade-all:**",
    "upgrade-all:chase:backend": "cd ./chase/backend && npx npm-check-updates -u && npm i",
    "upgrade-all:chase:frontend": "cd ./chase/frontend && npx npm-check-updates -u && npm i",
    "upgrade-all:auth": "cd ./auth && npx npm-check-updates -u && npm i",
    "format": "rome format . --write",
    "lint": "rome check . --apply",
    "test": "echo TODO"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rome": "12.1.1"
  }
}
