{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noConsoleLog": "warn"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      "chase/frontend/i18n/*.ts",
      "chase/frontend/i18n/*.tsx",
      "chase/frontend/backend-client"
    ]
  }
}
